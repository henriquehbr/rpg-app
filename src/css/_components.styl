// Button component
.action-btn
	display flex
	justify-content center
	align-items center
	font-family pixelFont
	font-size 18px
	margin 8px
	padding 12px
	border 3px solid white
	outline none
	color white
	transition all 0.3s
	box-shadow 6px 6px 0 2px rgba(0, 0, 0, 0.5)

	.pixel-icon
		margin-right 8px

	&:hover
		opacity 0.8
		transform scale(1.1)
	
	&:active
		transform scale(1)

// Dialog component
.modal
	display none
	flex-direction column
	justify-content center
	align-items center
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 10
	background-color rgba(0, 0, 0, 0.5)

	.modal-content
		font-family pixelFont
		padding 12px 18px
		min-width 280px
		max-height calc(100% - 32px)
		overflow-y auto
		background-color white
		border 3px solid black
		box-shadow 6px 6px 0 2px rgba(0, 0, 0, 0.5)

		.modal-title
			margin 0 0 5px
	
	.modal-footer
		display flex
		justify-content flex-end