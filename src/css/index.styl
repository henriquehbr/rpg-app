@import "_components"
@import "_keyframes"
@import "_media-queries"

*
	box-sizing border-box

@font-face
	font-family shadowedPixelFont
	src url("/dist/fonts/shadowed-pixel-font.ttf")

@font-face
	font-family pixelFont
	src url("/dist/fonts/pixel-font.ttf")

html
	height 100%
	user-select none

body
	margin 0
	display flex
	flex-direction column
	overflow hidden
	height 100%

	&:before
		content ""
		z-index -1
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background-image url("../img/pixel-wallpaper1.png")
		background-color grey
		background-position center
		background-size cover
		background-repeat no-repeat
		will-change transform
		background-blend-mode multiply
		animation menuPanorama 24s infinite

	.background-color
		display none

	.pixel-icon
		width 32px
		height 32px

	#icons-navbar
		display flex
		padding 12px 6px

		img
			margin 0 6px
			transition transform 0.5s

			&:hover
				animation navbarIconPulse 1s

	#main-container
		display flex
		flex-direction column
		align-items center
		margin auto 0

		.app-header 
			.app-title 
				height 100%
				font-family shadowedPixelFont
				animation logoEffect 1s

		.app-menu 
			display flex
			flex-direction column