*
	box-sizing border-box

@font-face
	font-family shadowedPixelFont
	src url("/dist/fonts/shadowed-pixel-font.otf")

@font-face
	font-family pixelFont
	src url("/dist/fonts/pixel-font.ttf")

html, body
	height 100%

body
	margin 0
	overflow hidden
	animation fadeIn 0.5s

	&:before
		content ""
		z-index -1
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-image url("../img/pixel-wallpaper1.png")
		background-color grey
		background-position center
		background-size cover
		background-repeat no-repeat
		background-attachment fixed
		background-blend-mode multiply
		animation menuPanorama 24s infinite

	.background-color
		display none

	#app 
		display flex
		flex-direction column
		justify-content center
		align-items center
		height 100%

		.app-header 
			.app-title 
				height 100%
				user-select none
				font-family shadowedPixelFont
				animation textShadow 6s infinite

		.app-menu 
			display flex
			flex-direction column
			
			.menu-btn
				font-family pixelFont
				font-size 18px
				margin 8px
				padding 12px
				border 3px solid white
				user-select none
				outline none
				color white
				transition all 0.3s
				box-shadow 6px 6px 0 2px rgba(0, 0, 0, 0.5)

				&:hover
					opacity 0.8
					transform scale(1.1)

@keyframes menuPanorama
	0%
		transform scale(1)
		background-image url("../img/pixel-wallpaper1.png")

	25%
		transform scale(1.2) rotate(3deg)

	50%
		transform scale(1) rotate(0deg)
		background-image url("../img/pixel-wallpaper2.png")

	75%
		transform scale(1.2) rotate(3deg)
	
	100%
		transform scale(1) rotate(0deg)
		background-image url("../img/pixel-wallpaper1.png")

@keyframes textShadow
	0% 
		text-shadow 1px 1px 5px white

	50%
		text-shadow 1px 1px 10px white

	100% 
		text-shadow 1px 1px 5px white

@keyframes fadeIn
	from
		opacity 0

	to
		opacity 1